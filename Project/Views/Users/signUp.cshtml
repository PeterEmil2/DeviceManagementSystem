@model Project.Models.User

@{
    ViewData["Title"] = "Sign Up";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Change the layout path according to your project structure
}

<style>
    /* Add CSS styles for text color */
    label, input, .text-danger, .btn-primary {
        color: black;
    }

    /* Style the card container */
    .card {
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: rgba(255, 255, 255, 0.8);
    }

    /* Style the card title */
    .card-title {
        color: #333;
        font-size: 24px;
        margin-bottom: 20px;
    }

    /* Style the form inputs */
    .form-control {
        border: 1px solid #ccc;
        border-radius: 3px;
        padding: 10px;
        font-size: 16px;
    }

    /* Style the submit button */
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        padding: 12px 20px;
        font-size: 18px;
        border-radius: 3px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    /* Style validation messages */
    .text-danger {
        color: red;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body">
                    <h2 class="card-title text-center">Sign Up</h2>
                    <form asp-controller="Users" asp-action="saveUserData" method="post">
                        <div class="mb-3">
                            <label for="FirstName" class="form-label">First Name:</label>
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.FirstName)
                        
                        </div>
                        <div class="mb-3">
                            <label for="LastName" class="form-label">Last Name:</label>
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.LastName)
                        </div>
                        <div class="mb-3">
                            <label for="Email" class="form-label">Email:</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email)
                        </div>
                        <div class="mb-3">
                            <label for="Password" class="form-label">Password:</label>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                        <div class="mb-3">
                            <label for="ConfirmPassword" class="form-label">Confirm Password:</label>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword)
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" asp-action="saveUserData" asp-controller="Users" class="btn btn-primary">Sign Up</button>
                        </div>

                        <label class="mt-3" style="padding-left:30%">
                            Already have an account? <a class="text-dark" asp-area="" asp-controller="Users" asp-action="getSignInPage">SignIn</a>
                        </label>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
